@model CoffeeShop.Models.NhanVienView;
@{
    Layout = "~/Views/User/_LayoutUser.cshtml";
}
<br />
<div class="col-md-10" style="margin-left: 8%">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> Đổi Mật Khẩu</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="User" asp-action="SuaNhanVienData">
            @*đường dẫn đến admin/ chạy quanlíanphamcontroler/ chạy hàm them sản phẩm*@
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Tài Khoản</label>
                    <input asp-for="nhanvienDTO.MaNV" value="@ViewBag.User.username" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã NV">

                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mật Khẩu</label>
                    <input asp-for="nhanvienDTO.TenNV"   type="password" class="form-control" id="exampleInputPassword1" placeholder="Nhập mật khẩu mới">@*asp-for định danh cho cái input, value là lấy dữ liệu để bên sửa có dữ liệu*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                
                <!--Combobox-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
    <!-- /.card -->

</div>

